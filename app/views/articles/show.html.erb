<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>

<p>
  <strong>Description:</strong>
  <%= @article.description %>
</p>

<p>
  <strong>Body:</strong>
  <%= @article.body %>
</p>

<p>
  <strong>Views:</strong>
  <%= @article.views %>
</p>

<p>
  <strong>User:</strong>
  <%= @article.user.email %>
</p>

<p>
  <strong>Rate this shit mafaka:</strong>
  <ul class="rating">
    <% (1..5).each do |i| %>
      <li class="rating_star" data-stars="<%= i %>" data-article-id="<%= @article.id %>" id="<%= "#{@article.id}_#{i}" %>"></li>
    <% end %>

  </ul>
  <%= @article.rate %>
</p>

<p>
  <strong>Active:</strong>
  <%= @article.active %>
</p>

<%= render 'comments/comments' %>

<%= link_to 'Edit', edit_article_path(@article) %> |
<%= link_to 'Back', articles_path %>
